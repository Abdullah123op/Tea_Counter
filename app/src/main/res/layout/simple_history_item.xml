<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearRaw"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="@dimen/_100sdp"

    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:background="@drawable/twocardviewbackground"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgImageH"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/default_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:maxLines="1"
        android:text=" Tea Delivered  "
        android:textColor="#fff"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgImageH"
        app:layout_constraintStart_toEndOf="@+id/imgImageH"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTimeH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="12:00 PM "
        android:textColor="#fff"
        android:textSize="@dimen/_7sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fgg"
        app:layout_constraintStart_toEndOf="@+id/fgg"
        app:layout_constraintTop_toTopOf="@+id/fgg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCupH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="2 CUP "
        android:textColor="#fff"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtPriceH"
        app:layout_constraintEnd_toStartOf="@+id/txtPriceH"
        app:layout_constraintTop_toTopOf="@+id/txtPriceH" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPriceH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:maxLines="1"
        android:text="/ 20"
        android:textColor="#fff"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

